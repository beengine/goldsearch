<main>
  <div class="content">
    <h1><%= locale[:header] %></h1>
    <div class="cards">
      <% specialties.each do |specialty| %>
        <div class="card" style="background-image: url('<%= specialty[:image] %>')">
          <a href="<%= slug %>/<%= specialty[locale[:slug]] %>">
            <%= specialty[locale[:name]] %>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</main>
