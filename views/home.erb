<main class="home">
  <div class="content">
    <div class="text-top">
      <%= sliders.first[locale[:text]] %>
    </div>
    <div class="swiper-container swiper-top">
      <div class="swiper-wrapper">
          <div class="swiper-slide" style="background-image: url('<%= sliders.first[:image_1] %>')"></div>
          <% if sliders.first[:image_2] %>
            <div class="swiper-slide" style="background-image: url('<%= sliders.first[:image_2] %>')"></div>
          <% end %>
          <% if sliders.first[:image_3] %>
            <div class="swiper-slide" style="background-image: url('<%= sliders.first[:image_3] %>')"></div>
          <% end %>
          <% if sliders.first[:image_4] %>
            <div class="swiper-slide" style="background-image: url('<%= sliders.first[:image_4] %>')"></div>
          <% end %>
          <% if sliders.first[:image_5] %>
            <div class="swiper-slide" style="background-image: url('<%= sliders.first[:image_5] %>')"></div>
          <% end %>
      </div>
    </div>
  </div>
  <% sliders.all[1..-1].each do |slider| %>
    <div class="content">
      <div class="text-bottom">
        <%= slider[locale[:text]] %>
      </div>
      <div class="swiper-container swiper-bottom">
        <div class="swiper-wrapper">
          <div class="swiper-slide" style="background-image: url('<%= slider[:image_1] %>')"></div>
          <% if slider[:image_2] %>
            <div class="swiper-slide" style="background-image: url('<%= slider[:image_2] %>')"></div>
          <% end %>
          <% if slider[:image_3] %>
            <div class="swiper-slide" style="background-image: url('<%= slider[:image_3] %>')"></div>
          <% end %>
          <% if slider[:image_4] %>
            <div class="swiper-slide" style="background-image: url('<%= slider[:image_4] %>')"></div>
          <% end %>
          <% if slider[:image_5] %>
            <div class="swiper-slide" style="background-image: url('<%= slider[:image_5] %>')"></div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</main>

<div class="carousel relative shadow-2xl bg-white">
  <div class="carousel-inner relative overflow-hidden w-full">
    <!--Slide 1-->
    <input class="carousel-open" type="radio" id="carousel-1" name="carousel" aria-hidden="true" hidden="" checked="checked">
    <div class="carousel-item absolute opacity-0" style="height:50vh;">
      <div class="block h-full w-full bg-indigo-500 text-white text-5xl text-center" style="background-image: url('<%= sliders.first[:image_1] %>')"></div>
    </div>
    <label for="carousel-3" class="prev control-1 w-10 h-10 ml-2 md:ml-10 absolute cursor-pointer hidden text-3xl font-bold text-black hover:text-white rounded-full leading-tight text-center z-10 inset-y-0 left-0 my-auto">‹</label>
    <label for="carousel-2" class="next control-1 w-10 h-10 mr-2 md:mr-10 absolute cursor-pointer hidden text-3xl font-bold text-black hover:text-white rounded-full bg-white hover:bg-blue-700 leading-tight text-center z-10 inset-y-0 right-0 my-auto">›</label>
    
    <!--Slide 2-->
    <input class="carousel-open" type="radio" id="carousel-2" name="carousel" aria-hidden="true" hidden="">
    <div class="carousel-item absolute opacity-0" style="height:50vh;">
      <div class="block h-full w-full bg-orange-500 text-white text-5xl text-center" style="background-image: url('<%= sliders.first[:image_1] %>')"></div>
    </div>
    <label for="carousel-1" class="prev control-2 w-10 h-10 ml-2 md:ml-10 absolute cursor-pointer hidden text-3xl font-bold text-black hover:text-white rounded-full bg-white hover:bg-blue-700 leading-tight text-center z-10 inset-y-0 left-0 my-auto">‹</label>
    <label for="carousel-3" class="next control-2 w-10 h-10 mr-2 md:mr-10 absolute cursor-pointer hidden text-3xl font-bold text-black hover:text-white rounded-full bg-white hover:bg-blue-700 leading-tight text-center z-10 inset-y-0 right-0 my-auto">›</label> 
    
    <!--Slide 3-->
    <input class="carousel-open" type="radio" id="carousel-3" name="carousel" aria-hidden="true" hidden="">
    <div class="carousel-item absolute opacity-0" style="height:50vh;">
      <div class="block h-full w-full bg-green-500 text-white text-5xl text-center" style="background-image: url('<%= sliders.first[:image_1] %>')"></div>
    </div>
    <label for="carousel-2" class="prev control-3 w-10 h-10 ml-2 md:ml-10 absolute cursor-pointer hidden text-3xl font-bold text-black hover:text-white rounded-full bg-white hover:bg-blue-700 leading-tight text-center z-10 inset-y-0 left-0 my-auto">‹</label>
    <label for="carousel-1" class="next control-3 w-10 h-10 mr-2 md:mr-10 absolute cursor-pointer hidden text-3xl font-bold text-black hover:text-white rounded-full bg-white hover:bg-blue-700 leading-tight text-center z-10 inset-y-0 right-0 my-auto">›</label>
    
  </div>
</div>
